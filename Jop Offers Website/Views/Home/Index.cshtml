@model IEnumerable<Jop_Offers_Website.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info">
    <h3>مرحبا بك عزيزى الزائر</h3>
    <p>مرحبا بك فى فضاء البحث عن الوظائف باختلاف اصنافها , يمكنك نشر وظيفة ان كنت ناشرا , ويمكنك التقدم للوظيفة اذا كنت باحثا عن شغل</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل&raquo;</a></p>
</div>


@foreach (var item in Model)
{
<div class="panel panel-info">
    <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.CategoryName)</h1></div>

    <div class="row panel-body">
        <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>

        @foreach (var subitem in item.Jops)
        {

            <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; min-height:380px;">
                <img src="~/Uploads/@subitem.JobImage" />
                <h3>@Html.DisplayFor(modelItem => subitem.JobTitle)</h3>
                <h3>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subitem.JobContent).ToString()))</h3>
                @Html.ActionLink("التفاصيل", "Details", new { JobId = subitem.id }, new { @class = "btn btn-primary" })
            </div>

        }
    </div>
</div>
}
